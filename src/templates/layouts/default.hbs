{{!-- This is the base layout for your project, and will be used on every page. --}}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="format-detection" content="telephone=no"/>
    <title>{{subject}}</title>
    <link href="assets/css/style.css" media="all" rel="stylesheet" type="text/css">
    {{!-- Outlook Conditional Styling --}}
    <!--[if mso]>
    <xml>
        <o:OfficeDocumentSettings>
            <o:AllowPNG/>
            <o:PixelsPerInch>96</o:PixelsPerInch>
        </o:OfficeDocumentSettings>
    </xml>
    <![endif]-->
</head>
<body>

    {{!-- Preview-Text --}}
    {{#if preview-text}}{{> preview-text}}{{/if}}

    {{!-- Body --}}
    <table class="body{{#if body-class}} {{body-class}}{{/if}}">
        <tr>
            <td class="center" align="center" valign="top">
                <center>
                    {{!-- Pages you create in the src/templates/emails folder are inserted here when the flattened files are created. --}}
                    {% body %}
                </center>
            </td>
        </tr>
    </table>

    {{!-- prevent Gmail on iOS font size manipulation ---}}
    <div style="display:none; white-space:nowrap; font:15px courier; line-height:0;"> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; </div>

</body>
</html>
